<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/image_notify_photo"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/default_photo_song" />

    <TextView
        android:id="@+id/text_notify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_notify_photo"
        android:layout_margin="@dimen/dp_10"
        android:text="@string/notify_no_song" />

    <ImageView
        android:id="@+id/image_notify_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_below="@id/text_notify_title"
        android:layout_toRightOf="@id/image_notify_photo"
        android:src="@drawable/ic_previous_white" />

    <ImageView
        android:id="@+id/image_notify_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_notify_title"
        android:layout_toRightOf="@id/image_notify_previous"
        android:src="@drawable/ic_play_white" />

    <ImageView
        android:id="@+id/image_notify_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_notify_title"
        android:layout_toRightOf="@id/image_notify_play"
        android:src="@drawable/ic_next_white" />
</RelativeLayout>
